<div class="banner-deg" style="background: url({{project.picPath}}) no-repeat center center / cover;"></div>
<div class="container-fluid content">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-8">
        <h1 class="title"><strong>{{project.name}}</strong></h1>
        <div class="user-data">
          <div class="home-avatar"
            style="background: url({{project.creatorId.avatar}}) no-repeat center center / cover;">
          </div>
          <p><strong>by</strong> {{project.creatorId.name}}</p>
        </div>
        <p class="desc">Description</p>
        <p>{{project.content}}</p>
        <a href="{{project.url}}" target="_new">{{project.url}}<svg width="1em" height="1em" viewBox="0 0 16 16"
            class="bi bi-arrow-up-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
              d="M6.5 4a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 .5.5v5a.5.5 0 0 1-1 0V4.5H7a.5.5 0 0 1-.5-.5z" />
            <path fill-rule="evenodd"
              d="M12.354 3.646a.5.5 0 0 1 0 .708l-9 9a.5.5 0 0 1-.708-.708l9-9a.5.5 0 0 1 .708 0z" />
          </svg></a>
        {{#if project.comments}}
        <p class="desc">Comments</p>
        {{/if}}
        {{#each project.comments as |comment|}}
        <div class="users-comments">
          {{#if comment.imagePath}}
          <img src="{{comment.imagePath}}" alt="{{comment.imageName}}" width="100">
          <h4><strong>{{comment.imageName}}</strong></h4>
          {{/if}}
          <div class="post-info">
            <div class="user-data">
              <div class="home-avatar"
                style="background: url({{comment.authorId.avatar}}) no-repeat center center / cover;">
              </div>
              <p class="author">posted by @{{comment.authorId.username}}</p>
            </div>
            <p class="comment-txt">{{comment.content}}</p>
            <hr>
          </div>
        </div>
        {{/each}}

        {{#if user}}
        {{#unless owner}}
        <div class="row">
          <div class="col-12 col-sm-8">
            <a href="#" data-toggle="modal" data-target="#comment">
              Make a comment! <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-chat" fill="currentColor"
                xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                  d="M2.678 11.894a1 1 0 0 1 .287.801 10.97 10.97 0 0 1-.398 2c1.395-.323 2.247-.697 2.634-.893a1 1 0 0 1 .71-.074A8.06 8.06 0 0 0 8 14c3.996 0 7-2.807 7-6 0-3.192-3.004-6-7-6S1 4.808 1 8c0 1.468.617 2.83 1.678 3.894zm-.493 3.905a21.682 21.682 0 0 1-.713.129c-.2.032-.352-.176-.273-.362a9.68 9.68 0 0 0 .244-.637l.003-.01c.248-.72.45-1.548.524-2.319C.743 11.37 0 9.76 0 8c0-3.866 3.582-7 8-7s8 3.134 8 7-3.582 7-8 7a9.06 9.06 0 0 1-2.347-.306c-.52.263-1.639.742-3.468 1.105z" />
              </svg>
            </a>
          </div>
        </div>
        {{/unless}}
        {{/if}}

        {{#if owner}}
        <hr>
        <form action="/project/{{project._id}}/edit" method="POST" enctype="multipart/form-data">

          <div class="form-group">
            <label for="name">Project name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{project.name}}">
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <textarea type="text" class="form-control" id="content" name="content"
              rows="5">{{project.content}}</textarea>
          </div>
          <div class="form-group">
            <label for="picPath">Upload file</label>
            <input type="file" class="form-control-file" id="picPath" placeholder="Upload file" name="picPath"
              value="{{project.picPath}}">
          </div>
          <div class="form-group">
            <label for="picName">File title</label>
            <input type="text" class="form-control" id="picName" placeholder="File title" name="picName"
              value="{{project.picName}}">
          </div>

          <div class="form-group">
            <label for="url">Project url</label>
            <input type="text" class="form-control" id="url" placeholder="File title" name="url"
              value="{{project.url}}">
          </div>
          <div class="edit-row">
            <button type="submit" class="btn" id="{{user._id}}">Edit project</button>
            <a href="/project/{{project._id}}/delete" class="btn-text">Delete project</a>
          </div>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="comment" tabindex="-1" aria-labelledby="commentLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <p class="modal-title" id="commentLabel">Comment project</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/project/{{project._id}}" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label for="content">Comment</label>
            <textarea type="text" class="form-control" id="content" name="content" rows="5"></textarea>
          </div>
          <div class="form-group">
            <label for="imagePath">Upload file</label>
            <input type="file" class="form-control-file" id="imagePath" placeholder="Upload file" name="imagePath">
          </div>
          <div class="form-group">
            <label for="imageName">File title</label>
            <input type="text" class="form-control" id="imageName" placeholder="File title" name="imageName">
          </div>
          <button type="submit" class="btn" id="{{user._id}}">Comment</button>
        </form>
      </div>
    </div>
  </div>
</div>