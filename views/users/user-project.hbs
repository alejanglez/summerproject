<div class="banner-deg" style="background: url(/images/post-bg.jpg) no-repeat center center / cover;"></div>
<div class="container-fluid content">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-6">
        <form action="/project/{{user._id}}/new" method="POST" enctype="multipart/form-data">
          <h1 class="title"><strong>Upload project!</strong></h1>
          <div class="form-group">
            <label for="name">Project name</label>
            <input type="text" class="form-control" id="name" name="name">
          </div>
          <div class="form-group">
            <label for="content">Content</label>
            <textarea type="text" class="form-control" id="content" name="content" rows="5"></textarea>
          </div>
          <div class="form-group">
            <label for="picPath">Project image</label>
            <input type="file" class="form-control-file" id="picPath" placeholder="Upload file" name="picPath">
          </div>
          <div class="form-group">
            <label for="picName">Files title</label>
            <input type="text" class="form-control" id="picName" placeholder="File title" name="picName">
          </div>
          <div class="form-group">
            <label for="url">Project Url</label>
            <input type="text" class="form-control" id="url" placeholder="don't forget the http:// prefix!" name="url">
          </div>
          <button type="submit" class="btn" id="{{user._id}}">Upload project</button>
        </form>
      </div>
    </div>
  </div>
</div>